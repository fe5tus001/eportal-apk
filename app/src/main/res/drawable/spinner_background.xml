<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Background color -->
    <solid android:color="#C1C1C1" /> <!-- Change to your preferred color -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" /> <!-- Change border color -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" /> <!-- Adjust corner radius as needed -->

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
